# add anaconda to path
setup="$('$TOOLS_PATH/anaconda3/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "$TOOLS_PATH/anaconda3/etc/profile.d/conda.sh" ]; then
        . "$TOOLS_PATH/anaconda3/etc/profile.d/conda.sh"
    else
        export PATH="$TOOLS_PATH/anaconda3/bin:$PATH"
    fi
fi
unset __conda_setup

# add ghdl to path
if [ -d "$TOOLS_PATH/ghdl/bin" ] ; then
        export PATH="$TOOLS_PATH/ghdl/bin:$PATH"
fi

